
<div class="container">
  <h1>My Tasks</h1>

  <div>
    <% @tasks.each do | task |%>
      <form>
        <div>
          <input type="checkbox" id="task" <%= "checked" if task.completed %>/>
          <label for="task"><%= link_to task.title, task_path(task.id) %></label>
          <button><%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
        </div>
      </form>
    <% end %>
  </div>

  <div class="new_task_container">
      <div class="button"><i class="fa-solid fa-square-plus" style="color: #000000;"></i><%= link_to "New task", new_task_path %></div>
  </div>

</div>
